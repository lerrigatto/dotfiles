[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bottom1]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 30
offset-x = 0 
offset-y = 0
radius = 0
fixed-center = false 

bottom = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = fixed;
font-1 = unifont:fontformat=truetype:size=10:antialias=true;
font-2 = siji;
font-3 = NotoEmoji;

modules-left = i3
;modules-center =  
modules-right = timer pulseaudio memory cpu eth date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = pointer

[module/timer]

type = custom/script

exec = $HOME/bin/polybar-timer.sh tail '⏰ TIMER' 1 
tail = true

click-left = $HOME/bin/polybar-timer.sh new 25 '🍅 Pomodoro:' 'notify-send "Session finished"' ; $HOME/bin/polybar-timer.sh update %pid%
click-middle = $HOME/bin/polybar-timer.sh cancel ; $HOME/bin/polybar-timer.sh update %pid%
click-right = $HOME/bin/polybar-timer.sh new 5 '🍺 Break:' 'notify-send "Break finished"' ; $HOME/bin/polybar-timer.sh update %pid%
scroll-up = $HOME/bin/polybar-timer.sh increase 60 || $HOME/bin/polybar-timer.sh new 1 'TIMER:' 'notify-send -u critical "Timer expired."' ; $HOME/bin/polybar-timer.sh update %pid%
scroll-down = $HOME/bin/polybar-timer.sh increase -60 ; $HOME/bin/polybar-timer.sh update %pid%


